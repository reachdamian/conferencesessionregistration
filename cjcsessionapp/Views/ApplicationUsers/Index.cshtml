@model IEnumerable<cjcsessionapp.Models.ApplicationUser>
@{
    ViewBag.Title = "Users";       
}
<div class="fresh-table">
    <div class="toolbar">

    </div>
    @if (TempData["AccountLocked"] != null)
    {
        <div class="alert alert-danger fade in alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>Account Locked!</strong> This user will not be able to use their account until Account is Unlocked.
        </div>
        TempData["AccountLocked"] = null;
    }

    @if (TempData["AccountUnLocked"] != null)
    {
        <div class="alert alert-success fade in alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>Account UnLocked!</strong> This user now be able to use their account.
        </div>
        TempData["AccountUnLocked"] = null;
    }


    <table class="table table-striped table-bordered table-hover" id="sample_1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Locked out Until</th>
                <th>Access Failed Count</th>
                <th>Email</th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessFailedCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>                    
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-pencil primary" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

